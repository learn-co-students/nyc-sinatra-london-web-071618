<h1>Edit Figure</h1>
  <form method="post" action="/figures/<%= @figure.id %>">
    <h3>Change Figure Name</h3>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    <br>
    <br>
    <h3>Change titles:</h3>
    <% Title.all.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input><br>
    <%end%>
    <br>
    <p> Or, create your own title: <input type="text" name="title[name]" id="new_title"></p>
    <br>
    <h3>Change landmarks:</h3>
    <% Landmark.all.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input><br>
    <%end%>
    <br>
    <h3>Or create our own landmarks:</h3>
    <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
    <p>Year: <input type="text" name="landmark[year_completed]"></p>
    <br>
    <input type="submit" value="Edit Figure">
  </form>

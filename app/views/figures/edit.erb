
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="put" />
  <div>
    <label for="name">Name:</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>" />
  </div>
  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <div>
      <label for="title"><%= title.name %></label>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]"
      value="<%= title.id %>"
        <% if @figure.title_ids.include?(title.id) %>
          checked
        <% end %>
      />
    </div>
  <%end%>

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <div>
      <label for="title"><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"/>
    </div>
  <%end%>

  <h2>New Landmark</h2>

    <div>
      <label for="name">Name:</label>
      <input type="text" id=new_landmark name="landmark[name]"/>
      <label for="year_completed">Year:</label>
      <input type="text" id=landmark_year_completed name="landmark[year_completed]">
    </div>

  <input type="submit" value="Edit Figure" />
</form>



<h1>Edit Figure</h1>

<a href='/figures/<%= @figure.id %>'>Go back</a>

<form action='/figures/<%= @figure.id %>' method="post">
  <input type='hidden' name='_method' value='patch' />
  <div>
    <label for='name'>Name:</label>
    <input type='text' id='figure_name' name='figure[name]' value='<%= @figure.name %>' />
  </div>

<% @titles.each do |title| %>
<div>
  <input type='checkbox' id='title-<%= title.id %>' name='figure[title_ids][]' value='<%= title.id %>'
    <% if @figure.title_ids.include?(title.id) %>
      checked
    <% end %>
    />
    <label for='title-<%= title.id %>'><%= title.name %></label>
</div>
<% end %>

<% @landmarks.each do |landmark| %>
<div>
  <input type='checkbox' id='landmark-<%= landmark.id %>' name='figure[landmark_ids][]' value='<%= landmark.id %>'
    <% if @figure.landmark_ids.include?(landmark.id) %>
      checked
    <% end %>
    />
    <label for='landmark-<%= landmark.id %>'><%= landmark.name %></label>
</div>
<% end %>

<input type='submit' value='Edit Figure!' />

</form>

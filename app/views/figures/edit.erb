<h1>Edit Figure</h1>
  <form action='/figures/<%= @figure.id %>' method='post'>
    <input type="hidden" name="_method" value="patch" />
    <label for="name">Name:</label>
    <input type='text' id="figure_name" name='figure[name]' value=" <%= @figure.name %> "/>

    <% @landmarks.each do |landmark| %>
      <input type=checkbox id="<%= "landmark_#{landmark.id}" %>" name="figure[landmark_ids][]"
      value="<%= landmark.id %>"
      <% if @figure.landmark_ids.include?(landmark.id) %> checked
      <% end %> />
      <label for="mycheckbox"> <%= landmark.name %> </label>
    <% end %>
    <input id="new_landmark" name="landmark[name]">
    <input id="new_landmark_year_completed" name="landmark[year_completed]">

    <% @titles.each do |title| %>
      <input type=checkbox id="<%= "title_#{title.id}" %>" name="figure[title_ids][]"
      value="<%= title.id %>"
      <% if @figure.title_ids.include?(title.id) %> checked
      <% end %> />
      <label for="mycheckbox"> <%= title.name %> </label>
    <% end %>
    <input id="new_title" name="title[name]">


    <input type="submit" value="Edit Figure" />
  </form>

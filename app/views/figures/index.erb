<h1>Figure Information</h1>
<% @figures.each do |figure| %>
  <h2><%= figure.name %></h2>
  <h3>Titles</h3>
  <ul>
  <% figure.titles.each do |title| %>
    <li><%= title.name %></li>
    <% end %>
  </ul>
  <h3>Landmarks</h3>
  <ul>
  <% figure.landmarks.each do |landmark| %>
  <li><%= landmark.name %>, <%= landmark.year_completed %></li>
  <% end %>
  </ul>
  <% end %>
